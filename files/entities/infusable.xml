<Entity>

    <LuaComponent _tags="enabled_in_world"
        script_throw_item="mods/blankStone/files/scripts/enable_children.lua"
    ></LuaComponent>

    <Entity name="infusableEntity" tags="enabled_in_world">
        <InheritTransformComponent></InheritTransformComponent>
        <MaterialAreaCheckerComponent
            _tags="enabled_in_world"
            update_every_x_frame="20"
            look_for_failure="0"
            area_aabb.min_x="-2"
            area_aabb.min_y="-7"
            area_aabb.max_x="2"
            area_aabb.max_y="-7"
            material="mimic_liquid"
            material2="mimic_liquid"
            kill_after_message="0"
        ></MaterialAreaCheckerComponent>

        <LuaComponent
            _tags="enabled_in_world"
            execute_every_n_frame="-1"
            script_material_area_checker_success="mods/blankStone/files/scripts/infuse_stone.lua"
        ></LuaComponent>

        <!-- VFX START -->
        <Base file="mods/blankStone/files/VFX/crafting_halo.xml" include_children="1" />

        <!-- 
            bool    : halo
            int     : message count
        -->
        <VariableStorageComponent
            name="hintEnable"
            value_bool="0"
            value_int="0"
        ></VariableStorageComponent>
        <!-- VFX END -->
    </Entity>

    <LuaComponent
        _tags="enabled_in_world"
        execute_every_n_frame="20"
        script_source_file="mods/blankStone/files/scripts/infuse_stone.lua"
        script_item_picked_up="mods/blankStone/files/scripts/infuse_stone.lua"
    ></LuaComponent>
</Entity>