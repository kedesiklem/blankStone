    <Base file="mods/blankStone/files/entities/base_stone.xml">

        <!-- physical presence -->

        <PhysicsImageShapeComponent
            image_file="mods/blankStone/files/items_gfx/opus_magnum/lapis_philosophorum.png"
        ></PhysicsImageShapeComponent>

        <!-- item -->

        <SpriteComponent
            image_file="mods/blankStone/files/items_gfx/opus_magnum/lapis_philosophorum.png"
        ></SpriteComponent>

        <ItemComponent
            item_name="$stone_blankstone_lapis_philosophorum_name"
            ui_description="$stone_blankstone_lapis_philosophorum_desc"
            ui_sprite="mods/blankStone/files/ui_gfx/opus_magnum/lapis_philosophorum.png"
        ></ItemComponent>

        <UIInfoComponent
            name="$stone_blankstone_lapis_philosophorum_name"
