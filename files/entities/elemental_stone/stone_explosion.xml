<Entity name="explosionStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_explosion.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_explosion.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="Explosion Stone"
      ui_description="This stone go BOOM!"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_explosion.png"
    ></ItemComponent>

    <UIInfoComponent
      name="Explosion Stone"
    ></UIInfoComponent>

    <AbilityComponent
