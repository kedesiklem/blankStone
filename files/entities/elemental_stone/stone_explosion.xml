<Entity name="explosionStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_explosion.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_explosion.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_explosionStone_name"
      ui_description="$stone_blankstone_explosionStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_explosion.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_explosionStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_explosionStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>


  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/ray.xml">
    <SpriteParticleEmitterComponent
      color.r="8.0" color.g="0.72" color.b="0.0"
      count_min="10"
      count_max="15"
    ></SpriteParticleEmitterComponent>
  </Base>

  <!-- effect -->

  <GameEffectComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    effect="DAMAGE_MULTIPLIER"
    frames="-1"
  ></GameEffectComponent>

  <VariableStorageComponent
    name="blankStoneID"
    value_string="explosionStone"
  ></VariableStorageComponent>

</Entity>
