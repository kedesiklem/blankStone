<Entity name="voidStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_void.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_void.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_voidStone_name"
      ui_description="$stone_blankstone_voidStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_void.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_voidStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_voidStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>


  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="0.0" color.g="0.0" color.b="0.0" color.a="0.1"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      additive="1"
      emissive="1"
    ></SpriteParticleEmitterComponent>
  </Base>

  <!-- effect -->


  <VariableStorageComponent
    name="blankStoneID"
    value_string="voidStone"
  ></VariableStorageComponent>

</Entity>