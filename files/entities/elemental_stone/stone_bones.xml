  <LuaComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    script_source_file="mods/blankStone/files/scripts/stone_specific_script/peace_with_gods.lua"
    execute_every_n_frame="6"
  ></LuaComponent>


  <VariableStorageComponent
    name="blankStoneID"
    value_string="bonesStone"
  ></VariableStorageComponent>

