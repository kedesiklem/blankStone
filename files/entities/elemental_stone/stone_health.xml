      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_health.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_health.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="Healthy Stone"
      ui_description="A stone infused with life itself."
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_health.png"
    ></ItemComponent>

    <UIInfoComponent
      name="Healthy Stone">
    </UIInfoComponent>

  	<AbilityComponent
      ui_name="Healthy Stone"
      throw_as_item="1"
      >
