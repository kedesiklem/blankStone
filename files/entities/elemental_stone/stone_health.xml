<Entity name="healthStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_health.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_health.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="Healthy Stone"
      ui_description="A stone infused with life itself, it enjoy your company."
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_health.png"
    ></ItemComponent>

    <UIInfoComponent
      name="Healthy Stone"> </UIInfoComponent>

    <AbilityComponent
      ui_name="Healthy Stone"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>

  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="0.3" color.g="0.8" color.b="0.3" color.a="0.25"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
    ></SpriteParticleEmitterComponent>
  </Base>

  <!-- Stain effect -->
  <Base file="mods/blankStone/files/entities/staining.xml">
    <VariableStorageComponent
      name="stain_effect"
      value_string="magic_liquid_hp_regeneration"
      value_int="32"
    ></VariableStorageComponent>
  </Base>

</Entity>