    ></VariableStorageComponent>

    <LuaComponent
        _tags="enabled_in_world,enabled_in_hand"
        script_source_file="mods/blankStone/files/scripts/stain_effect.lua"
        execute_every_n_frame="5"
    ></LuaComponent>

