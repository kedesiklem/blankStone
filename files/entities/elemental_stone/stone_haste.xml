<Entity name="hasteStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_haste.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_haste.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_hasteStone_name"
      ui_description="$stone_blankstone_hasteStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_haste.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_hasteStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_hasteStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>

  <Base file="mods/blankStone/files/entities/infusable.xml" include_children="1" />


  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="0.8" color.g="0.3" color.b="0.3" color.a="0.25"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      additive="1"
      emissive="1"
    ></SpriteParticleEmitterComponent>
  </Base>

  <!-- effect -->

  <GameEffectComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    effect="MOVEMENT_FASTER_2X"
    frames="-1"
  ></GameEffectComponent>

  <GameEffectComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    effect="FASTER_LEVITATION"
    frames="-1"
  ></GameEffectComponent>

  <VariableStorageComponent
    name="blankStoneID"
    value_string="hasteStone"
  ></VariableStorageComponent>

</Entity>
