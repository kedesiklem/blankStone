<Entity name="goldStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">

    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_gold.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_gold.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$goldStone_name"
      ui_description="$goldStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_gold.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$goldStone_name"> </UIInfoComponent>

    <AbilityComponent
      ui_name="$goldStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>

  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="8.0" color.g="0.72" color.b="0.0" color.a="0.75"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      randomize_position.min_x="-0.3"
      randomize_position.max_x="0.3"
      randomize_position.min_y="-0.3"
      randomize_position.max_y="0.3"
      additive="1"
      emissive="1"
    ></SpriteParticleEmitterComponent>
  </Base>
  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="8.0" color.g="0.72" color.b="0.0" color.a="0.50"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      randomize_position.min_x="-0.3"
      randomize_position.max_x="0.3"
      randomize_position.min_y="-0.3"
      randomize_position.max_y="0.3"
      additive="1"
      emissive="1"
      scale.x="1.5" scale.y="1.5"
    ></SpriteParticleEmitterComponent>
  </Base>

  <Base file="mods/blankStone/files/VFX/ray.xml">
    <SpriteParticleEmitterComponent
      color.r="8.0" color.g="0.72" color.b="0.0"
      count_min="30"
      count_max="45"
    ></SpriteParticleEmitterComponent>
  </Base>

  <MagicConvertMaterialComponent
    _tags="enabled_in_world,enabled_in_hand,enabled_in_inventory"
    from_material_tag="[liquid]"
    to_material="gold"
    radius="32"
    kill_when_finished="0"
    loop="1"
    is_circle="1"
  ></MagicConvertMaterialComponent>

  <MagicConvertMaterialComponent
    _tags="enabled_in_world,enabled_in_hand,enabled_in_inventory"
    from_material_tag="[alchemy]"
    to_material="gold"
    radius="32"
    kill_when_finished="0"
    loop="1"
    is_circle="1"
  ></MagicConvertMaterialComponent>

  <MagicConvertMaterialComponent
    _tags="enabled_in_world"
    from_material="gold"
    to_material="air"
    radius="8"
    kill_when_finished="0"
    loop="1"
    is_circle="1"
  ></MagicConvertMaterialComponent>

</Entity>