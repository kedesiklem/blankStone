<Entity name="invisibilityStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_invisibility.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_invisibility.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_invisibilityStone_name"
      ui_description="$stone_blankstone_invisibilityStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_invisibility.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_invisibilityStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_invisibilityStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>

  <!-- effect -->

  <GameEffectComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    effect="INVISIBILITY"
    frames="-1"
  ></GameEffectComponent>

  <MagicConvertMaterialComponent
    _tags="enabled_in_world,enabled_in_hand"
    from_material_array="water, water_ice, water_swamp, water_salt"
    to_material_array="magic_liquid_invisibility, magic_liquid_invisibility, magic_liquid_invisibility, magic_liquid_invisibility"
    is_circle="1"
    radius="25"
    kill_when_finished="0"
    loop="1"
  ></MagicConvertMaterialComponent>


  <VariableStorageComponent
    name="blankStoneID"
    value_string="invisibilityStone"
  ></VariableStorageComponent>

</Entity>
