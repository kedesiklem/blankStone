<Entity name="urineStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_urine.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_urine.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_urineStone_name"
      ui_description="$stone_blankstone_urineStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_urine.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_urineStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_urineStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>

  <Base file="mods/blankStone/files/entities/infusable.xml" include_children="1" />


  <!-- VFX -->
  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="urine"
      count_min="4"
      count_max="6"
    ></ParticleEmitterComponent>
  </Base>

  <!-- effet -->
  <GameEffectComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    effect="JARATE"
    frames="-1"
  ></GameEffectComponent>

  <!-- Stain effect -->
  <Base file="mods/blankStone/files/entities/staining.xml">
    <VariableStorageComponent
      name="stain_effect"
      value_string="urine"
      value_int="5"
    ></VariableStorageComponent>
  </Base>

  <!-- magical properties -->

  <VariableStorageComponent
    name="blankStoneID"
    value_string="urineStone"
  ></VariableStorageComponent>

</Entity>