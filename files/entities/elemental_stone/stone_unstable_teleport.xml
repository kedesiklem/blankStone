<Entity name="unstableTeleportStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_unstable_teleport.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_unstable_teleport.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="Unstable Teleportation Stone"
      ui_description="The stone phases through your hands strangely."
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_unstable_teleport.png"
    ></ItemComponent>

    <UIInfoComponent
      name="Unstable Teleportation Stone"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="Unstable Teleportation Stone"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>

  <Base file="mods/blankStone/files/entities/infusable.xml" include_children="1" />

  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="magic_liquid_teleportation"
      count_min="1"
      count_max="2"
    ></ParticleEmitterComponent>
  </Base>

  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="magic_liquid_unstable_teleportation"
      count_min="1"
      count_max="2"
    ></ParticleEmitterComponent>
  </Base>


  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="0.0" color.g="0.2" color.b="0.4" color.a="0.05"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      additive="1"
      emissive="1"
    ></SpriteParticleEmitterComponent>
  </Base>

  <!-- magical properties -->

  <LuaComponent
    _tags="enabled_in_hand"
    script_source_file="mods/blankStone/files/scripts/stone_specific_script/unstable_teleport_stone.lua"
    script_kick="mods/blankStone/files/scripts/stone_specific_script/unstable_teleport_stone.lua"
    execute_every_n_frame="60"
  ></LuaComponent>

</Entity>