<Entity name="milkStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_milk.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_milk.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_milkStone_name"
      ui_description="$stone_blankstone_milkStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_milk.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_milkStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_milkStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>


  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="milk"
      count_min="4"
      count_max="6"
    ></ParticleEmitterComponent>
  </Base>

  <!-- effect -->

  <VariableStorageComponent
    name="blankStoneID"
    value_string="milkStone"
  ></VariableStorageComponent>

</Entity>