<Entity name="teleportStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_teleport.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_teleport.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$teleportStone_name"
      ui_description="$teleportStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_teleport.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$teleportStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$teleportStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>


  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="magic_liquid_teleportation"
      count_min="2"
      count_max="5"
    ></ParticleEmitterComponent>
  </Base>

  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="magic_liquid_unstable_teleportation"
      count_min="2"
      count_max="5"
    ></ParticleEmitterComponent>
  </Base>


  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="0.0" color.g="0.2" color.b="0.8" color.a="0.25"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      additive="1"
      emissive="1"
    ></SpriteParticleEmitterComponent>
  </Base>

  <!-- magical properties -->

  <MagicConvertMaterialComponent
    _tags="enabled_in_world,enabled_in_hand"
    from_material="magic_liquid_unstable_teleportation"
    to_material="magic_liquid_teleportation"
    is_circle="1"
    radius="30"
    min_radius="20"
    kill_when_finished="0"
    loop="1"
  ></MagicConvertMaterialComponent>

  <MaterialSuckerComponent
    _tags="enabled_in_hand,enabled_in_world"
    material_type="0"
    suck_tag="[slime]"
    barrel_size="1000"
    num_cells_sucked_per_frame="5"
    randomized_position.min_x="-10"
    randomized_position.max_x="10"
    randomized_position.min_y="-10"
    randomized_position.max_y="10"
  ></MaterialSuckerComponent>

  <MaterialInventoryComponent
    _tags="enabled_in_hand,enabled_in_world"
  >
    <count_per_material_type>
      <Material material="slime" count="1000" />
    </count_per_material_type>
  </MaterialInventoryComponent>

  <LuaComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    script_kick="mods/blankStone/files/scripts/stone_specific_script/teleport_stone.lua"
    execute_every_n_frame="-1"
  ></LuaComponent>

</Entity>