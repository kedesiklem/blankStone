<Entity name="loveStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_love.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_love.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="Love Stone"
      ui_description="A stone infused with the power of love."
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_love.png"
    ></ItemComponent>

    <UIInfoComponent
      name="Love Stone"> </UIInfoComponent>

    <AbilityComponent
      ui_name="Love Stone"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>

  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="0.7" color.g="0.0" color.b="0.3" color.a="0.35"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      additive="1"
      emissive="1"
    ></SpriteParticleEmitterComponent>
  </Base>


  <!-- Stain effect -->
  <Base file="mods/blankStone/files/entities/staining.xml">
    <VariableStorageComponent
      name="stain_effect"
      value_string="magic_liquid_charm"
      value_int="256"
    ></VariableStorageComponent>
  </Base>

  <MagicConvertMaterialComponent
    _tags="enabled_in_world,enabled_in_hand"
    from_material_tag="[liquid]"
    to_material="magic_liquid_charm"
    radius="64"
    kill_when_finished="0"
    loop="1"
    is_circle="1"
  ></MagicConvertMaterialComponent>

</Entity>