<Entity name="poisonHarmfulStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_poison_harmful.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_poison_harmful.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_poisonHarmfulStone_name"
      ui_description="$stone_blankstone_poisonHarmfulStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_poison_harmful.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_poisonHarmfulStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_poisonHarmfulStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>


  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="poison"
      count_min="4"
      count_max="10"
    ></ParticleEmitterComponent>
  </Base>


  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="0.3" color.g="0.0" color.b="0.6" color.a="0.55"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      additive="1"
      emissive="1"
    ></SpriteParticleEmitterComponent>
  </Base>


  <!-- === MATERIAL DAMAGE INCREASE ======== -->
  <LuaComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    script_source_file="mods/blankStone/files/scripts/status_effects/material_immunity_stone.lua"
    execute_every_n_frame="1"
  ></LuaComponent>

  <VariableStorageComponent
    name="protected_material"
    value_string="poison"
  ></VariableStorageComponent>

  <VariableStorageComponent
    name="new_material_dmg"
    value_float="0.003"
  ></VariableStorageComponent>


  <!-- === STATUS EFFECT DAMAGE INCREASE === -->
  <LuaComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    script_source_file="mods/blankStone/files/scripts/status_effects/damage_type_multiplier_stone.lua"
    execute_every_n_frame="1"
  ></LuaComponent>

  <VariableStorageComponent
    name="protected_damage_type"
    value_string="poison"
  ></VariableStorageComponent>

  <VariableStorageComponent
    name="new_mult"
    value_float="3.0"
  ></VariableStorageComponent>

  <!-- magical properties -->

  <!-- Stain effect -->
  <Base file="mods/blankStone/files/entities/staining.xml">
    <VariableStorageComponent
      name="stain_effect"
      value_string="poison"
      value_int="35"
    ></VariableStorageComponent>
  </Base>

  <MagicConvertMaterialComponent
    _tags="enabled_in_world,enabled_in_hand"
    from_material_array="water, water_ice, water_swamp, water_salt"
    to_material_array="poison, poison, poison, poison"
    is_circle="1"
    radius="40"
    min_radius="15"
    kill_when_finished="0"
    loop="1"
  ></MagicConvertMaterialComponent>

  <VariableStorageComponent
    name="blankStoneID"
    value_string="poisonHarmfulStone"
  ></VariableStorageComponent>

</Entity>
