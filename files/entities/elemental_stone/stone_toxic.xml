<Entity name="toxicStone">

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_toxic.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_toxic.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_toxicStone_name"
      ui_description="$stone_blankstone_toxicStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_toxic.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_toxicStone_name"
    ></UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_toxicStone_name"
      throw_as_item="1"
    ></AbilityComponent>
  </Base>


  <!-- VFX -->

  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="radioactive_liquid"
      count_min="4"
      count_max="6"
    ></ParticleEmitterComponent>
  </Base>

  <Base file="mods/blankStone/files/VFX/sweat.xml">
    <ParticleEmitterComponent
      emitted_material_name="rock_static_radioactive"
      count_min="2"
      count_max="5"
    ></ParticleEmitterComponent>
  </Base>


  <Base file="mods/blankStone/files/VFX/halo.xml">
    <SpriteParticleEmitterComponent
      color.r="0.3" color.g="0.8" color.b="0.3" color.a="0.25"
      color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
      additive="1"
      emissive="1"
    ></SpriteParticleEmitterComponent>
  </Base>

  <!-- protection -->

  <GameEffectComponent
    _tags="enabled_in_hand,enabled_in_inventory"
    effect="PROTECTION_RADIOACTIVITY"
    frames="-1"
  ></GameEffectComponent>

  <!-- magical properties -->

  <MagicConvertMaterialComponent
    _tags="enabled_in_world,enabled_in_hand"
    from_material_array="water, water_ice, water_swamp, water_salt"
    to_material_array="radioactive_liquid, radioactive_liquid, radioactive_liquid, radioactive_liquid"
    is_circle="1"
    radius="30"
    min_radius="20"
    kill_when_finished="0"
    loop="1"
  ></MagicConvertMaterialComponent>

  <VariableStorageComponent
    name="blankStoneID"
    value_string="toxicStone"
  ></VariableStorageComponent>

</Entity>