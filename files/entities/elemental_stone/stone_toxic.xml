<Entity>

  <Base file="mods/blankStone/files/entities/elemental_stone.xml">
    <PhysicsImageShapeComponent 
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_toxic.png"
    ></PhysicsImageShapeComponent>

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_toxic.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="Toxic Stone"
      ui_description="A stone infused with toxic properties."
      ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_toxic.png"
    ></ItemComponent>

    <UIInfoComponent
      name="Toxic Stone">
    </UIInfoComponent>

  	<AbilityComponent
      ui_name="Toxic Stone"
      throw_as_item="1"
      >
    </AbilityComponent>
  </Base>

  <!-- protection -->

  <GameEffectComponent 
    _tags="enabled_in_hand"
    effect="PROTECTION_RADIOACTIVITY"
    frames="-1"
  ></GameEffectComponent>

  <!-- magical properties -->

  <MagicConvertMaterialComponent
    _tags= "enabled_in_world, enabled_in_hand"
    from_material_array="water, water_ice, water_swamp, water_salt"
    to_material_array="radioactive_liquid, radioactive_liquid, radioactive_liquid, radioactive_liquid"
    is_circle = "1"
    radius = "30"
    min_radius = "20"
    kill_when_finished  = "0"
    loop = "1"
  ></MagicConvertMaterialComponent>

</Entity>
