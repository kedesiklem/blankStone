<Entity name="magicLiquidStone" tags="hittable,teleportable_NOT,item_physics,item_pickup,forgeable">

    <Base file="mods/blankStone/files/entities/elemental_stone.xml">
        <PhysicsImageShapeComponent
            image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_magic_liquid.png"
        ></PhysicsImageShapeComponent>

        <SpriteComponent
            image_file="mods/blankStone/files/items_gfx/elemental_stone/stone_magic_liquid.png"
        ></SpriteComponent>

        <ItemComponent
            item_name="$stone_blankstone_magicLiquidStone_name"
            ui_description="$stone_blankstone_magicLiquidStone_desc"
            ui_sprite="mods/blankStone/files/ui_gfx/elemental_stone/stone_magic_liquid.png"
        ></ItemComponent>

        <UIInfoComponent
            name="$stone_blankstone_magicLiquidStone_name"> </UIInfoComponent>

        <AbilityComponent
            ui_name="$stone_blankstone_magicLiquidStone_name"
            throw_as_item="1"
        ></AbilityComponent>
    </Base>

    <!-- VFX -->

    <Base file="mods/blankStone/files/VFX/halo.xml">
        <SpriteParticleEmitterComponent
            color.r="0.0" color.g="0.0" color.b="0.3" color.a="0.35"
            color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
            additive="1"
            emissive="1"
        ></SpriteParticleEmitterComponent>
    </Base>


  <VariableStorageComponent
    name="blankStoneID"
    value_string="magicLiquidStone"
  ></VariableStorageComponent>

</Entity>
