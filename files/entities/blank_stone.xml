<Entity name="blankStone">
  <Base file="mods/blankStone/files/entities/base_stone.xml">

    <!-- physical presence -->

    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/blank_stone.png"
    ></PhysicsImageShapeComponent>


    <!-- item -->

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/blank_stone.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$stone_blankstone_blankStone_name"
      ui_description="$stone_blankstone_blankStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/blank_stone.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$stone_blankstone_blankStone_name"
    > </UIInfoComponent>

    <AbilityComponent
      ui_name="$stone_blankstone_blankStone_name"
    ></AbilityComponent>
  </Base>

  <!-- Infusion process -->
  <Base file="mods/blankStone/files/entities/infusable.xml" include_children="1" />

  <LuaComponent
    _tags="enabled_in_world"
    script_kick="mods/blankStone/files/scripts/stone_specific_script/blankStone.lua"
  ></LuaComponent>

  <!-- Cap at 50% potion -->
  <VariableStorageComponent
    name="liquidAvailable"
    value_int="500"
  ></VariableStorageComponent>

  <VariableStorageComponent
    name="blankStoneID"
    value_string="blankStone"
  ></VariableStorageComponent>

</Entity>