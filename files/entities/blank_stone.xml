<Entity name="blankStone" tags="hittable,teleportable_NOT,item_physics,item_pickup,forgeable">
  <Base file="mods/blankStone/files/entities/base_stone.xml">

    <!-- physical presence -->

    <PhysicsImageShapeComponent
      image_file="mods/blankStone/files/items_gfx/blank_stone.png"
    ></PhysicsImageShapeComponent>


    <!-- item -->

    <SpriteComponent
      image_file="mods/blankStone/files/items_gfx/blank_stone.png"
    ></SpriteComponent>

    <ItemComponent
      item_name="$blankStone_name"
      ui_description="$blankStone_desc"
      ui_sprite="mods/blankStone/files/ui_gfx/blank_stone.png"
    ></ItemComponent>

    <UIInfoComponent
      name="$blankStone_name"
    > </UIInfoComponent>

    <AbilityComponent
      ui_name="$blankStone_name"
    ></AbilityComponent>
  </Base>

  <!-- Infusion process -->
  <Base file="mods/blankStone/files/entities/infusable.xml" include_children="1" />

</Entity>