<Entity name="universal_storageStone">
    <Base file="mods/blankStone/files/entities/base_stone.xml">
        <PhysicsImageShapeComponent
            image_file="mods/blankStone/files/items_gfx/stone_storage.png"
        ></PhysicsImageShapeComponent>

        <SpriteComponent _tags="enabled_in_world"
            image_file="mods/blankStone/files/items_gfx/stone_storage.png"
        ></SpriteComponent>

        <ItemComponent
            item_name="$stone_blankstone_storageStone_name"
            ui_description="$stone_blankstone_storageStone_desc"
            ui_sprite="mods/blankStone/files/ui_gfx/stone_storage.png"
        ></ItemComponent>

        <UIInfoComponent
            name="$stone_blankstone_storageStone_name"
        ></UIInfoComponent>

        <AbilityComponent
            ui_name="$stone_blankstone_storageStone_name"
            throw_as_item="1"
        ></AbilityComponent>
    </Base>

    <VariableStorageComponent
        name="blankStoneID"
        value_string="storageStone"
    ></VariableStorageComponent>

    <!-- storage functionnalities -->
    <Inventory2Component
        quick_inventory_slots="0"
        full_inventory_slots_x="8"
        full_inventory_slots_y="1"
    />

    <VariableStorageComponent
        name="bags_of_many_last_available_position"
        value_int="1"
    ></VariableStorageComponent>
    <VariableStorageComponent
        name="bags_of_many_positions"
    ></VariableStorageComponent>
    <VariableStorageComponent
        name="bags_of_many_bag_pickup_override"
        value_int="1"
    ></VariableStorageComponent>

    <Entity name="inventory_quick">
    </Entity>
    <Entity name="inventory_full">
        <InheritTransformComponent />
    </Entity>

    <!-- Throw bag -->
    <LuaComponent
        _tags="enabled_in_hand"
        script_throw_item="mods/blankStone/files/scripts/storage_stone/bags/bags_throw_script.lua"
        execute_every_n_frame="-1"
    ></LuaComponent>


</Entity>